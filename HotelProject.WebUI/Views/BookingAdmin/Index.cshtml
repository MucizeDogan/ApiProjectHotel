<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Data Table</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>

                                @*<h4 class="card-title">Data Table</h4>
                                <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                <thead>*@
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Mail</th>
                                    <th>Check In</th>
                                    <th>Check Out</th>
                                    <th>Adult Count</th>
                                    <th>Adult Count</th>
                                   @* <th>Room Count</th>
                                    <th>Special</th>
                                    <th>Desc</th>*@
                                    <th>Status</th>
                                     <th>Confirm</th>
                                      <th>Cancel</th>
                                        <th>Update</th>
                                         <th>Delete</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>@item.BookingID</td>

                                        <td>@item.Name</td>
                                        <td>@item.Mail</td>
                                        <td>@(((DateTime)item.CheckIn).ToShortDateString())</td>
                                        <td>@(((DateTime)item.CheckOut).ToShortDateString())</td>
                                        <td>@item.AdultCount</td>
                                        <td>@item.ChildCount</td>
                                        @*<td>@item.RoomCount</td>
                                        <td>@item.SpecialRequest</td>
                                        <td>@item.Description</td>*@
                                        <td><span class="badge badge-info px-2 ">@item.Status</span></td>
                                        <td><a href="#" class="btn mb-1 btn-rounded btn-success">Confirm</a></td>
                                        <td><a href="#" class="btn mb-1 btn-rounded btn-danger">Cancel</a></td>
                                        <td><a href="/Service/UpdateService/@item.BookingID" class="btn  btn-warning">Update</a></td>
                                        <td><a href="/Service/DeleteService/@item.BookingID" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }
                                <tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a href="/Service/AddService/" class="btn btn-primary">New Service Add</a>





