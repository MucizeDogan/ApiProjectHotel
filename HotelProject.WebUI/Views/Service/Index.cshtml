@model List<ListServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<link href="~/adminTheme/plugins/tables/css/datatable/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="css/style.css" rel="stylesheet">



<div class="container-fluid">
    <div class="row">
        @*<div class="col-12">*@
        <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm"><option value="10">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select>
        @*<div class="card">*@
        @*<div class="card-body">*@
        @*<h4 class="card-title">Data Table</h4>*@
        @*<div class="table-responsive">*@
        <table class="table table-striped table-bordered zero-configuration">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Service Icon</th>
                    <th>Service Title</th>
                    <th>Description</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <td>@item.ServiceID</td>
                        <td>@item.ServiceIcon</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><a href="#" class="btn btn-dark">Details</a></td>
                        <td><a href="/Service/UpdateService/@item.ServiceID" class="btn mb-1 btn-rounded btn-warning">Update</a></td>
                        <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
                <tr>
            </tbody>
        </table>

        @*</div>*@
        @*</div>*@
        @* </div>*@
        @*</div>*@
    </div>
</div>
<a href="/Service/AddService/" class="btn btn-primary">New Service Add</a>





